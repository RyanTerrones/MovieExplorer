<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MovieExplorer.Pages.MoviesPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Movies">

    <VerticalStackLayout Padding="16" Spacing="12">

        <!--Title -->
        <Label Text="ðŸŽ¬ GitFlix"
               FontSize="28"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

        <!--Browse movies text -->
        <Label Text="Browse movies"
               FontSize="16"
               HorizontalOptions="Center" />

        <!--search bar -->
        <SearchBar x:Name="TitleSearchBar"
           Placeholder="Search by title..."
           TextChanged="TitleSearchBar_TextChanged" />

        <!--movie list-->
        <CollectionView x:Name="MoviesCollectionView">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="8" ColumnDefinitions="Auto,*,Auto">

                        <!-- Emojis-->
                        <Label Text="{Binding Emoji}"
                               FontSize="32"
                               VerticalOptions="Center" />

                        <!-- Title / year / genres -->
                        <VerticalStackLayout Grid.Column="1"
                                             Spacing="2"
                                             Margin="8,0">
                            <Label Text="{Binding Title}"
                                   FontAttributes="Bold"
                                   FontSize="18" />
                            <Label Text="{Binding Year}"
                                   FontSize="14"
                                   TextColor="Gray" />
                            <Label Text="{Binding Genres}"
                                   FontSize="12"
                                   TextColor="Gray" />
                        </VerticalStackLayout>

                        <!-- Rating on the right hand side -->
                        <Label Grid.Column="2"
                               Text="{Binding ImdbRating}"
                               FontSize="14"
                               VerticalOptions="Center"
                               HorizontalOptions="End" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>