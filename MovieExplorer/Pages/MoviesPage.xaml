<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MovieExplorer.Pages.MoviesPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Movies">

    <!-- Grid with 2 rows:
         Row 0: header + search
         Row 1: movie list -->
    <Grid RowDefinitions="Auto,*"
          Padding="16">

        <!-- Top area: title + welcome + search bar -->
        <VerticalStackLayout Grid.Row="0" Spacing="8">
            <Label Text="ðŸŽ¬ GitFlix"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <Label Text="Browse movies"
                   FontSize="16"
                   HorizontalOptions="Center" />

            <!-- Search bar: calls TitleSearchBar_TextChanged in code-behind -->
            <SearchBar x:Name="TitleSearchBar"
                       Placeholder="Search by title..."
                       TextChanged="TitleSearchBar_TextChanged" />
        </VerticalStackLayout>

        <!--Movie list: fills remaining space and scrolls -->
        <CollectionView Grid.Row="1"
                        x:Name="MoviesCollectionView">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="8" ColumnDefinitions="Auto,*,Auto">

                        <!-- Emoji column -->
                        <Label Text="{Binding Emoji}"
                               FontSize="32"
                               VerticalOptions="Center" />

                        <!-- Title/year/genres -->
                        <VerticalStackLayout Grid.Column="1"
                                             Spacing="2"
                                             Margin="8,0">
                            <Label Text="{Binding Title}"
                                   FontAttributes="Bold"
                                   FontSize="18" />
                            <Label Text="{Binding Year}"
                                   FontSize="14"
                                   TextColor="Gray" />
                            <Label Text="{Binding Genres}"
                                   FontSize="12"
                                   TextColor="Gray" />
                        </VerticalStackLayout>

                        <!-- Rating on the right -->
                        <Label Grid.Column="2"
                               Text="{Binding ImdbRating}"
                               FontSize="14"
                               VerticalOptions="Center"
                               HorizontalOptions="End" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>
</ContentPage>